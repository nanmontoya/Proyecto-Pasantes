            <main>
            <table id="table">
                <thead class="table-sucess">
                    <tr>
                        
                        <th>ID Pasante</th>
                        <th>Nombre</th>
                        <th>Jornada</th>
                        <th>Horario</th>
                       
                        
                        
                    </tr>
                </thead>
                <tbody>
                  <% resultados.forEach(function(row) { %>
                    <tr>
                        <td class="text-center"><%= row.usuario%></td>
                        <td class="text-center"><%= row.nombre%></td>
                        <td class="text-center"><%= row.turno%></td>
                        <td class="text-center"><%= row.horario%></td>
                       
                        
                        
                    </tr>
                  <% }); %>
                </tbody>
            </table>

           
        </main>     
        
    </div>


    
       
<footer>
   
